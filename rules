#!/usr/bin/make -f
override_dh_auto_configure:
	dh_auto_configure -- -DCONFIGFILE:FILE=/etc/getauthorizedkeys.ini

override_dh_fixperms:
	dh_fixperms
	chmod 0660 debian/getauthorizedkeys/etc/getauthorizedkeys.ini

override_dh_install:
	mkdir -p debian/tmp/etc
	cp getauthorizedkeys.ini debian/tmp/etc
	dh_install

%:
	dh $@
